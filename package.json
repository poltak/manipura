{
  "name": "manipura",
  "private": true,
  "version": "0.1.0",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev": "npm run --workspace bridge-web dev",
    "test:core": "npm run --workspace @manipura/core test",
    "test:web": "npm run --workspace bridge-web test:unit",
    "test:e2e": "npm run --workspace bridge-web test:e2e",
    "test:unit": "npm run test:core && npm run test:web",
    "test": "npm run test:unit && npm run test:e2e"
  }
}
